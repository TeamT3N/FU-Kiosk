<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">






    //Profile picture

    //Profile picture
    <TextView
        android:id="@+id/text_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="380dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#EFEFEF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_profile"
        app:layout_constraintVertical_bias="0.211">


        <TextView
            android:id="@+id/name"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/imageView"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/profile"
            app:layout_constraintVertical_bias="0.543" />

        <TextView
            android:id="@+id/collegesp"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/coursep"
            android:textAlignment="textEnd"
            android:textColor="#5C5B5B"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toStartOf="@+id/yearlevel"
            app:layout_constraintHorizontal_bias="0.867"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/collegep"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/idnumber"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/name"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.692"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintVertical_bias="0.045" />

        <TextView
            android:id="@+id/collegep"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/idnumber1"
            android:textAlignment="textEnd"
            android:textColor="#5C5B5B"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toStartOf="@+id/colleges"
            app:layout_constraintHorizontal_bias="0.867"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/coursep"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/border"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="3dp"
            app:layout_constraintBottom_toTopOf="@+id/name"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.73"
            app:srcCompat="@drawable/border_avatar" />


        <ImageView
            android:id="@+id/profile"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_constraintBottom_toBottomOf="@+id/border"
            app:layout_constraintEnd_toEndOf="@+id/border"
            app:layout_constraintStart_toStartOf="@+id/border"
            app:layout_constraintTop_toTopOf="@+id/border"
            app:srcCompat="@drawable/avatar" />

        <Button
            android:id="@+id/ImageButton"
            android:layout_width="94dp"
            android:layout_height="16dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/radius2"
            android:text="@string/change_photo"
            android:textColor="#7E7D7D"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/profile"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/border"
            app:layout_constraintVertical_bias="1.0"
            tools:context="com.androiddeft.loginandregistration.ui.Profile.ProfileInfo" />

        <TextView
            android:id="@+id/idnumber1"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/name"
            android:textAlignment="textEnd"
            android:textColor="#5C5B5B"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toStartOf="@+id/idnumber"
            app:layout_constraintHorizontal_bias="0.867"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintVertical_bias="0.045" />

        <TextView
            android:id="@+id/coursep"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/collegep"
            android:layout_toEndOf="@+id/collegesp"
            android:textAlignment="textEnd"
            android:textColor="#5C5B5B"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toStartOf="@+id/course"
            app:layout_constraintHorizontal_bias="0.867"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/idnumber1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/yearlevel"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/colleges"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.692"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/colleges"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/colleges"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/course"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.692"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/idnumber"
            app:layout_constraintVertical_bias="0.288" />

        <TextView
            android:id="@+id/course"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/idnumber"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.692"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/idnumber"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_chevron_right_black_24dp"
            android:text=""
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/yearlevel"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintVertical_bias="1.0"
            tools:context="com.androiddeft.loginandregistration.ui.Profile.ProfileInfo" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/classes"
        android:layout_width="150px"
        android:layout_height="150px"
        android:background="@drawable/classes"
        android:text=""
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/grades"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.057"
        tools:context="com.androiddeft.loginandregistration.ui.Profile.ProfileInfo" />


    <TextView
        android:id="@+id/text_classes"
        android:layout_width="55dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="CLASSES"
        android:textAlignment="center"
        android:textColor="#880B1E"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/printouts"
        app:layout_constraintEnd_toStartOf="@+id/text_grades"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classes"
        app:layout_constraintVertical_bias="0.043" />

    <Button
        android:id="@+id/grades"
        android:layout_width="150px"
        android:layout_height="150px"
        android:background="@drawable/grade"
        android:text=""
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/payables"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toEndOf="@+id/classes"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.057"
        tools:context="com.androiddeft.loginandregistration.ui.Profile.ProfileInfo" />


    <TextView
        android:id="@+id/text_grades"
        android:layout_width="55dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="GRADES"
        android:textAlignment="center"
        android:textColor="#880B1E"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/clearance"
        app:layout_constraintEnd_toStartOf="@+id/text_payables"
        app:layout_constraintHorizontal_bias="0.762"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classes"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/payables"
        android:layout_width="150px"
        android:layout_height="150px"
        android:background="@drawable/account"
        android:text=""
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toEndOf="@+id/grades"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.057"
        tools:context="com.androiddeft.loginandregistration.ui.Profile.ProfileInfo" />

    <TextView
        android:id="@+id/text_payables"
        android:layout_width="49dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="PAYABLES"
        android:textAlignment="center"
        android:textColor="#880B1E"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/evaluation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.826"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classes"
        app:layout_constraintVertical_bias="0.041" />

    <Button
        android:id="@+id/clearance"
        android:layout_width="150px"
        android:layout_height="150px"
        android:background="@drawable/clearance"
        android:text=""
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/evaluation"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toEndOf="@+id/printouts"
        app:layout_constraintTop_toBottomOf="@+id/grades"
        app:layout_constraintVertical_bias="0.188"
        tools:context="com.androiddeft.loginandregistration.ui.Profile.ProfileInfo" />

    <Button
        android:id="@+id/evaluation"
        android:layout_width="150px"
        android:layout_height="150px"
        android:background="@drawable/evaluation"
        android:text=""
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toEndOf="@+id/clearance"
        app:layout_constraintTop_toBottomOf="@+id/payables"
        app:layout_constraintVertical_bias="0.188"
        tools:context="com.androiddeft.loginandregistration.ui.Profile.ProfileInfo" />

    <TextView
        android:id="@+id/text_printouts"
        android:layout_width="55dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="PRINTOUTS"
        android:textAlignment="center"
        android:textColor="#880B1E"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_clearance"
        app:layout_constraintHorizontal_bias="0.480"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/printouts"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/printouts"
        android:layout_width="150px"
        android:layout_height="150px"
        android:background="@drawable/assessment"
        android:text=""
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clearance"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classes"
        app:layout_constraintVertical_bias="0.188"
        tools:context="com.androiddeft.loginandregistration.ui.Profile.ProfileInfo" />

    <TextView
        android:id="@+id/text_evaluation"
        android:layout_width="55dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="EVALUATION"
        android:textAlignment="center"
        android:textColor="#880B1E"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.841"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evaluation"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_clearance"
        android:layout_width="55dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="CLEARANCE"
        android:textAlignment="center"
        android:textColor="#880B1E"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_evaluation"
        app:layout_constraintHorizontal_bias="0.762"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clearance"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
